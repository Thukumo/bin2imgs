                    Console.Error.WriteLine("Failed to open video file.");
                    return 1;
                }
                int framenum = (int)videofile.Get(VideoCaptureProperties.FrameCount);
                for(int i = 0; i < framenum; i++)
                {
                    byte[] data = new byte[len];
                    while(!videofile.Read(mat)) Thread.Sleep(5);
                    { //tmpを封じ込める用
