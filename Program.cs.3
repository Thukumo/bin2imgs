                            Parallel.For(0, len /8, new ParallelOptions(){MaxDegreeOfParallelism = max ? Environment.ProcessorCount : ((Environment.ProcessorCount-2) > 0 ? Environment.ProcessorCount-2 : 1)}, (i) =>
